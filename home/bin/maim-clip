#!/bin/sh

DEST=/storage/images/screenshots
FILENAME=$(date +%s).png

# window selection
if [[ $1 == "-w" ]]; then
    CMD='maim -ust 9999999'
# free selection
elif [[ $1 == "-s" ]]; then
    CMD='maim -us'
else
# whole desktop
    CMD='maim -u'
fi

$CMD | tee $DEST/$FILENAME | xclip -selection clipboard -t image/png
